<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_firts_MAUI.EditPage"
             Title="EditPage">
    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Margin="20"
                         Padding="20"
                         Spacing="15">
        <Entry
            x:Name="UserName"
            Text="{Binding}"
            FontSize="20"/>
        <Button
            Text="Сохранить"
            FontSize="20"
            Clicked="SaveChanges"
            />
        <Label
            x:Name="OldName"
            Text="{Binding}"
            IsVisible = "False"
            />
    </VerticalStackLayout>
</ContentPage>
