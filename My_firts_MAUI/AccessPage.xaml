<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_firts_MAUI.AccessPage"
             Title="AccessPage">
    <VerticalStackLayout Spacing="15" Padding="25" VerticalOptions="Center">
        <Label 
            Text="Получение доступа к пользователю"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="20"/>
        <Entry
            Placeholder="Введите имя пользователя: "
            FontSize="20"
            ClearButtonVisibility="WhileEditing"
            x:Name="UserName"
            />
        <Entry
            Placeholder="Введите пароль: "
            FontSize="20"
            IsPassword="True"
            x:Name="UserPassword"/>
        <Button
            Text="Получить доступ"
            FontSize="20"
            x:Name="AccessButton"
            Clicked="AccessButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
