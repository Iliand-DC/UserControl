<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_firts_MAUI.AddPage"
             Title="AddPage">

    <VerticalStackLayout
            Spacing="15"
            Padding="20,0"
            VerticalOptions="Center">
        <Label
            Text="Добавление нового пользователя"
            FontSize="20"
            />
        
        <Entry
            ClearButtonVisibility="WhileEditing"
            Placeholder="Введите имя пользователя: "
            FontSize="20"
            x:Name="UserName"
            />

        <Entry
            Placeholder="Введите возраст пользователя: "
            x:Name="UserAge"
            FontSize="20"
            />

        <Entry
            Placeholder="Введите пароль: "
            x:Name="Password"
            FontSize="20"
            IsPassword="True"
            />

        <Button
            Text="Добавить"
            x:Name="AddButton"
            FontSize="20"
            Clicked="OnAddButton"
            />

    </VerticalStackLayout>
</ContentPage>
