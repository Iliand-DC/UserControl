<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_firts_MAUI.UpdatePage"
             Title="UpdatePage">
    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Margin="20"
                         Padding="20"
                         Spacing="15">
        <Entry
            x:Name="UserName"
            FontSize="20"
            Placeholder="Введите имя пользователя, информацию о котором хотите изменить"
            />
        <Button
            FontSize="20"
            Text="Изменить"
            x:Name="ToEditPageButton"
            Clicked="ToEditPage"
            />
    </VerticalStackLayout>
</ContentPage>
